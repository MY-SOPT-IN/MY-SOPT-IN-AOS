<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.SoptIn" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.Title1" parent="TextAppearance.SoptIn">
        <item name="fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Title2" parent="TextAppearance.SoptIn">
        <item name="fontFamily">@font/font_pretendard_extrabold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance.SoptIn">
        <item name="fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.SoptIn">
        <item name="fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.SoptIn">
        <item name="fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.caption1" parent="TextAppearance.SoptIn">
        <item name="fontFamily">@font/font_pretendard_extrabold</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.caption2" parent="TextAppearance.SoptIn">
        <item name="fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.badge" parent="TextAppearance.SoptIn">
        <item name="fontFamily">@font/font_pretendard_extrabold</item>
        <item name="android:textSize">7sp</item>
    </style>

</resources>