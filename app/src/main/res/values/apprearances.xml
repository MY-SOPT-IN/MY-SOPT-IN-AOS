<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.Title1">
        <item name="fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="TextAppearance.Title2">
        <item name="fontFamily">@font/font_pretendard_extrabold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Subtitle">
        <item name="fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.Body">
        <item name="fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.Body2">
        <item name="fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.caption1">
        <item name="fontFamily">@font/font_pretendard_extrabold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.caption2">
        <item name="fontFamily">@font/font_pretendard_extrabold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.badge">
        <item name="fontFamily">@font/font_pretendard_extrabold</item>
        <item name="android:textSize">9sp</item>
    </style>

</resources>