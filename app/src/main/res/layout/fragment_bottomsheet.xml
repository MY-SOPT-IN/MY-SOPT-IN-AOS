<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".bottomsheet">



    <!-- X 버튼 -->
    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="380dp"

        />



    <!-- '수정하기' 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/image_edit"
        android:paddingLeft="30dp"
        android:text="수정하기"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="430dp"
        android:backgroundTint="@drawable/background_btn"
        />

    <!-- '복사하기' 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_copy"
        android:paddingLeft="20dp"
        android:text="복사하기"
        app:layout_constraintTop_toBottomOf="@id/buttonEdit"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_btn"
        />

    <!-- '쉬어가기' 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonRest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="쉬어가기"
        android:drawableLeft="@drawable/ic_rest"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonCopy"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_btn"


        />

    <!-- '완료하기' 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="완료하기"
        android:drawableLeft="@drawable/ic_welldone"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonRest"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_btn"
        />

    <!-- '월별통계보기' 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonStatistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="월별 통계 보기"
        android:drawableLeft="@drawable/ic_graph"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonComplete"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_btn"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전체 삭제하기"
        android:drawableLeft="@drawable/ic_trashcan"
        android:paddingLeft="20dp"
        android:textColor="@color/semantic_red"
        app:layout_constraintTop_toBottomOf="@id/buttonStatistics"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_btn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>